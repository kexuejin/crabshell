{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CrabShell",
  "version": "1.0.0",
  "identifier": "com.crabshell.gui",
  "build": {
    "beforeDevCommand": "npm run dev:renderer",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build:renderer",
    "frontendDist": "../dist/renderer"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CrabShell - APK/AAB Hardening Tool",
        "width": 800,
        "height": 900,
        "minWidth": 640,
        "minHeight": 720,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "GUI for CrabShell hardening",
    "longDescription": "Desktop GUI for APK/AAB hardening"
  }
}
